{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    "group:allNonMajor",
    "schedule:weekends",
    ":automergeMinor",
    ":automergeBranch"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "extends": [
      "schedule:weekends"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "vite"
      ],
      "matchPackagePatterns": [
        "^@vitejs/"
      ],
      "groupName": "vite packages"
    }
  ],
  "timezone": "Europe/Berlin",
  "ignoreTests": true,
  "stabilityDays": 5
}